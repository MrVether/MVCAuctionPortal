@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>User Panel</title>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .user-panel {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .list-group-item {
            transition: all 0.3s;
        }

            .list-group-item:hover {
                background-color: #f8f9fa;
            }

            .list-group-item a {
                text-decoration: none;
                color: #000;
            }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            @if (Model.IsUserSeller)
            {
                <!-- Seller actions -->
                <div class="col-md-6">
                    <div class="user-panel">
                        <h2>Seller Actions</h2>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="@Url.Action("Create", "Auction")">Add Auction</a></li>
                            <li class="list-group-item"><a href="@Url.Action("Edit", "Auction")">Edit Auction</a></li>
                            <li class="list-group-item"><a href="@Url.Action("ListOfItems", "Item")">Edit Item</a></li>
                            <li class="list-group-item"><a href="@Url.Action("Edit", "Company")">Edit Company Info</a></li>
                        </ul>
                    </div>
                </div>
            }

            <!-- User actions -->
            <div class="col-md-@(Model.IsUserSeller ? "6" : "12")">
                <div class="user-panel">
                    <h2>User Actions</h2>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="@Url.Action("UserOrders", "Order")">Manage Purchases</a></li>
                        <li class="list-group-item"><a href="@Url.Action("GetBasket", "Basket")">Manage Cart</a></li>
                        <li class="list-group-item"><a href="@Url.Action("ListOfCoupons", "Coupon")">View Coupons</a></li>
                        <li class="list-group-item"><a href="@Url.Action("UserDetails", "User")">Show my account information</a></li>
                        <li class="list-group-item"><a href="@Url.Action("UpdateProfile", "User")">Edit User Details</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
