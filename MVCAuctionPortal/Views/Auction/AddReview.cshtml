@model AuctionPortal.Models.Review
@{
    ViewBag.Title = "Add Review";
}

<h2>Add Review</h2>

<form asp-controller="Auction" asp-action="AddReview" method="post">
    <input type="hidden" asp-for="AuctionID" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="IsPositive">Positive</label>
        <input asp-for="IsPositive" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>