@model AuctionPortal.Models.Auction

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h2>Delete Confirmation</h2>
<p>Are you sure you want to delete this auction?</p>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-md-4">Title:</dt>
            <dd class="col-md-8">@Model.Title</dd>

            <dt class="col-md-4">Description:</dt>
            <dd class="col-md-8">@Model.Item.Description</dd>

            <dt class="col-md-4">Seller:</dt>
            <dd class="col-md-8"><a href="/company/GetByUserID/@Model.UserID">@Model.UserID</a></dd>

            <dt class="col-md-4">Category:</dt>
            <dd class="col-md-8">@Model.SubCategory.Name</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <img src="@Model.ImageURL" alt="@Model.Title" class="img-thumbnail">
    </div>
</div>

<div class="form-group">
    <form asp-action="Delete" asp-route-id="@Model.ItemID" method="post">
        <input type="hidden" asp-for="ItemID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>