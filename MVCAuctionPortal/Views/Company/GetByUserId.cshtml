@model IEnumerable<AuctionPortal.Models.Company>

@foreach (var company in Model)
{
    <h2>@company.Name</h2>

    <p><strong>NIP:</strong> @company.Nip</p>
    @if (!string.IsNullOrEmpty(company.Regon))
    {
        <p><strong>REGON:</strong> @company.Regon</p>
    }

    <p><strong>Country Establishment:</strong> @company.CountryEstablishment</p>
    <p><strong>Date of Establishment:</strong> @company.DateOfEstablishment.ToString("dd/MM/yyyy")</p>
    <p><strong>Description:</strong> @company.Description</p>

    <h3>Company Address</h3>

    <p><strong>Street:</strong> @company.CompanyAddress.Street</p>
    <p><strong>City:</strong> @company.CompanyAddress.HouseNumber</p>
    <p><strong>Zip Code:</strong> @company.CompanyAddress.ZipCode</p>
}