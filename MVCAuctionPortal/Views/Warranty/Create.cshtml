@model AuctionPortal.Models.Warranty

<form method="post" action="@Url.Action("Create", "Warranty")" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Name" class="control-label col-md-2">Name:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Name" name="Name" required>
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        <label for="Duration" class="control-label col-md-2">Duration:</label>
        <div class="col-md-10">
            <input type="number" class="form-control" id="Duration" name="Duration"  required>
            @Html.ValidationMessageFor(model => model.Durantion)
        </div>
    </div>

    <div class="form-group">
        <label for="Description" class="control-label col-md-2">Description:</label>
        <div class="col-md-10">
            <textarea class="form-control" id="Description" name="Description" required></textarea>
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>