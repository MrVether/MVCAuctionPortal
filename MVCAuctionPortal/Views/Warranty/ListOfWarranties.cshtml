@model IEnumerable<AuctionPortal.Models.Warranty>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>Description</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var warranty in Model)
    {
        <tr>
            <td>@warranty.Name</td>
            <td>@warranty.Durantion</td>
            <td>@warranty.Description</td>
            <td>
                <a href="@Url.Action("Edit", "Warranty", new { id = warranty.WarrantyID })" class="btn btn-primary">Edit</a>
                <form method="post" action="@Url.Action("Delete", "Warranty", new { id = warranty.WarrantyID })" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>


            </td>
        </tr>
    }
    </tbody>
</table>